{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
    {{ car.name }}
{% endblock %}

{% block body %}
  <h1>{{ car.mark }} {{ car.name }}</h1>
    <table class="table">
        <tr>
            <td>Year</td>
            <td>{{ car.year }}</td>
        </tr>
        <tr>
            <td>Navigation</td>
            <td>
                {% if car.navigation %}
                    <span class="glyphicon glyphicon-ok"></span>
                    {% else %}
                        <span class="glyphicon glyphicon-remove"></span>
                {% endif %}
            </td>
        </tr>
        <tr>
            <td>Price</td>
            <td>{{ car.price }}</td>
        </tr>
    </table>
    <p>{{ car.description }}</p>
    <a href="{{ url('offer') }}"><- Back</a>
{% endblock %}